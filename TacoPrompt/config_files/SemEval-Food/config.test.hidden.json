{
    "exp_name": "Food-",
    "name": "TacoPromptHidden",
    "n_gpu": 1,
    "data_path": "data/SemEval-Food/semeval_food.pickle.bin",
    "arch": {
        "type": "TacoPromptHidden",
        "trainer": "TrainerHidden",
        "args": {
            "dropout": 0.1,
            "plm": "bert-base-uncased",
            "code_num": 16,
            "hidden_dim": 768,
            "code_dim": 256,
            "scorer_hidden_dim": 300,
            "nhead": 8,
            "transformer_ff_dim": 768,
            "transformer_layers": 2
        }
    },
    "train_data_loader": {
        "type": "UnifiedDataLoader",
        "args": {
            "tokenizer": "bert-base-uncased",
            "taxonomy_name": "semeval_food",
            "sampling_mode": 1,
            "batch_size": 2,
            "negative_size": 15,
            "max_pos_size": 1,
            "expand_factor": 40,
            "shuffle": true,
            "num_workers": 0,
            "cache_refresh_time": 64
        }
    },
    "optimizer": {
        "type": "AdamW",
        "args": {
            "lr": 3e-05,
            "weight_decay": 0.01,
            "amsgrad": true
        }
    },
    "loss": "bce_loss",

    "hit_metrics": [
        "mrr_scaled_10",
        "hit_at_1",
        "hit_at_5",
        "hit_at_10"
    ],

    "recall_metrics": [
        "mrr_scaled_10",
        "recall_at_1",
        "recall_at_5",
        "recall_at_10"
    ],

    "metrics": [
        "macro_mr",
        "micro_mr",
        "mrr_scaled_10",
        "recall_at_1",
        "recall_at_5",
        "recall_at_10",
        "hit_at_1",
        "hit_at_5",
        "hit_at_10",
        "precision_at_1",
        "precision_at_5",
        "precision_at_10",
        "mrr"
    ],
    "lr_scheduler": {
        "library": "huggingface",
        "type": "get_cosine_schedule_with_warmup",
        "args": {
            "mode": "min",
            "factor": 0.5,
            "patience": 20,
            "verbose": true
        }
    },
    "trainer": {
        "lm": 1.0,
        "lp": 1.0,
        "lc": 1.0,
        "anneal": 1,
        "epochs": 150,
        "test_batch_size": 775,
        "save_dir": "data/saved/semeval_food/",
        "save_period": 20,
        "verbosity": 2,
        "monitor": "max val_mrr_scaled_10",
        "early_stop": 5,
        "grad_clip": 1,
        "accumulation_iters": 8,
        "tensorboardX": true
    }
}