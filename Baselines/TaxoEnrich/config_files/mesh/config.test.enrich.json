{
    "name": "MatchModel",
    "n_gpu": 1,
    "data_path": "./data/mesh",
    "mode": "rps",
    "arch": {
        "type": "MatchModel",
        "trainer": "TrainerT",
        "args": {
            "propagation_method": "PGAT",
            "readout_method": "WMR",
            "matching_method": "Enrich",
            "k": 10,
            "in_dim": 768,
            "hidden_dim": 500,
            "out_dim": 500,
            "pos_dim": 50,
            "num_layers": 1,
            "heads": [4, 1],
            "feat_drop": 0.1, 
            "attn_drop": 0.1,
            "hidden_drop": 0.1,
            "out_drop": 0.1
        }
    },
    "train_data_loader": {
        "type": "UnifiedDataLoader",
        "args":{
            "sampling_mode": 1,
            "batch_size": 4,
            "negative_size": 31,
            "max_pos_size": 100,
            "expand_factor": 40,
            "shuffle": true,
            "num_workers": 0,
            "cache_refresh_time": 64,
            "normalize_embed": true
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "bce_loss",
    "metrics": [
        "macro_mr",
        "micro_mr",
        "hit_at_1",
        "hit_at_5",
        "hit_at_10",
        "precision_at_1",
        "precision_at_5",
        "precision_at_10",
        "real_hit_at_1",
        "real_hit_at_5",
        "real_hit_at_10",
        "mrr_scaled_10"
    ],
    "lr_scheduler": {
        "type": "ReduceLROnPlateau",
        "args": {
            "mode": "min",
            "factor": 0.5,
            "patience": 10,
            "verbose": true
        }
    },
    "trainer": {
        "l1": 1.0,
        "l2": 1.0,
        "l3": 1.0,
        "l4": 0.2,

        "epochs": 100,
        "test_batch_size": 4096,

        "save_dir": "./experiments/mesh/",
        "save_period": 20,
        "verbosity": 2,
        
        "monitor": "max val_mrr_scaled_10",
        "early_stop": 10,
        "grad_clip": -1,

        "tensorboardX": true
    }
}
